@model BigSchoolS.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm Khóa Học Mới</h2>
<from>
    @using (Html.BeginForm(Model.Action, "Courses"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            <label for="Place">Khu vực</label>
            @Html.TextBoxFor(m => m.Place, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Place)
        </div>
        <div class="form-group">
            <label for="Date">Ngày</label>
            @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Date)
        </div>
        <div class="form-group">
            <label for="Time">Giờ</label>
            @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Time)
        </div>
        <div class="form-group">
            <label for="Category">Danh mục</label>
            @Html.DropDownListFor(m => m.Category, new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Category)
        </div>
        <div class="form-group">
            <button type="submit" value="Save" class="btn btn-danger">Lưu Lại</button>
        </div>
    }
</from>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}
